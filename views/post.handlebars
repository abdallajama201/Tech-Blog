<div class="card m-3">
    <h5 class="card-header">{{post.title}}</h5>
    <div class="card-body">
        <p class="card-title">Posted by: {{post.user.name}} on {{post.date}}</p>
        <p class="card-text">{{post.content}}</p>
    </div>
</div>
<div class="row justify-content-center">
  <h4>Comments:</h4>
</div>
{{#each comm as |com| }}
<div class="card m-3">
    <div class="card-body">
        <p class="card-text">{{com.content}}</p>
        <p class="card-title">Posted by: {{com.user.name}} on {{com.date}}</p>
    </div>
</div>
{{/each}}
<div class="row justify-content-center">
  <h4>Leave a Comment</h4>
</div>
<form class="m-3">
  <div class="form-group">
    <textarea class="form-control" placeholder="Leave a comment" id="comment-area" rows="3"></textarea>
    <button type="submit" class="btn btn-primary m-auto" id="btn">Submit</button>
  </div>
</form>
<script src="/js/comment.js"></script>